<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:padding="5dp"
    android:id="@+id/move"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbar"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:titleEnabled="true"
                app:contentScrim="@color/black"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                android:id="@+id/collapsing_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@color/black"
                    android:orientation="vertical">
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@color/black"
                        android:rowCount="3"
                        android:columnCount="3">
                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:layout_margin="7dp"
                            android:id="@+id/near"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@color/white">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/ic_baseline_add_location_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="Nearest Hostels"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:id="@+id/girls"
                            android:layout_margin="7dp"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_add_reaction_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center"
                                    android:text="Only Ladies"
                                    android:textSize="15dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:layout_margin="7dp"
                            android:id="@+id/one"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"

                                    android:src="@drawable/ic_baseline_accessibility_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:text="One in room"
                                    android:textSize="15dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:id="@+id/self"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center"

                                    android:src="@drawable/ic_baseline_add_home_work_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center"
                                    android:text="Self Contained"
                                    android:textSize="13dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:id="@+id/communities"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_alternate_email_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:text="Communities"
                                    android:textSize="13dp"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:id="@+id/prices"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"

                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_money_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:text="Prices"
                                    android:textSize="15dp"/>



                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:id="@+id/vacancy"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_add_alert_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:text="Hostel Ads"
                                    android:textSize="15dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="1"
                            app:cardCornerRadius="15dp"
                            android:layout_margin="5dp"
                            android:id="@+id/videos"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:background="@color/white">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_home_work_24"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Homestels"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_columnWeight="1"
                            android:layout_rowWeight="2"
                            app:cardCornerRadius="15dp"
                            android:id="@+id/news"
                            android:layout_margin="5dp"
                            android:elevation="4dp"
                            android:layout_height="match_parent"
                            android:layout_width="0dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:orientation="vertical"
                                android:weightSum="3">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_baseline_new_releases_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/black"
                                    android:text="New Hostels"
                                    android:textSize="15dp"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:contentPadding="2.0dp"
                        android:layout_marginTop="3dp"
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="6dp"
                        android:elevation="32dp">
                        <com.denzcoskun.imageslider.ImageSlider
                            android:id="@+id/image_slider"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:layout_gravity="center|end"
                            app:layout_collapseMode="parallax"
                            android:scaleType="centerCrop"
                            app:iss_auto_cycle="true"
                            app:iss_delay="0"
                            app:iss_period="2500">
                        </com.denzcoskun.imageslider.ImageSlider>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin"
                    android:id="@+id/toolbar">
                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.tabs.TabLayout
                        android:layout_width="match_parent"
                        android:id="@+id/tabLayout"
                        android:background="#EDEDF3"
                        android:layout_marginTop="578dp"
                        app:tabTextColor="@color/black"
                        app:tabIndicatorHeight="0dp"
                        app:tabMode="fixed"
                        android:layout_height="40dp">

                    </com.google.android.material.tabs.TabLayout>
                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scro"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wrapper">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recviewhostel"/>
            </FrameLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:id="@+id/bottom_navigation"
        app:labelVisibilityMode="labeled"
        app:itemRippleColor="@color/cardview_dark_background"
        android:background="#0A0B0B"/>
</RelativeLayout>